<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/scrollHelperCardView"
        android:layout_width="@dimen/standardMargin8x"
        app:cardElevation="0dp"
        android:backgroundTint="@color/mainContainerTransparentBackground"
        app:cardCornerRadius="@dimen/standardMargin"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/standardMargin"
        android:layout_marginEnd="-10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="@dimen/standardMargin3x">

        <com.dust.exweather.utils.customviews.CTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/TextSize3x"
            android:textColor="@color/standardUiWhite"
            android:text="@string/current"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standardMargin"
        app:cardCornerRadius="@dimen/standardMargin"
        app:cardElevation="0dp"
        android:layout_marginHorizontal="@dimen/standardMargin"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/mainContainerTransparentBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollHelperCardView">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/historyDetailsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:nestedScrollingEnabled="false"
            android:padding="@dimen/standardMargin0.5x"
            android:overScrollMode="never"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>