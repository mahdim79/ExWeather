<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/swipeRefreshLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/standardMargin2x"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/weatherImage"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        tools:src="@drawable/ic_launcher_background"/>

                    <com.dust.exweather.utils.customviews.CTextView
                        android:id="@+id/weatherStateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="صاف و بدون ابر"
                        android:textColor="@color/white"
                        android:textSize="@dimen/TextSize6x"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="@dimen/standardMargin1.5x"/>

                    <com.dust.exweather.utils.customviews.CTextView
                        android:id="@+id/weatherCityNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="London"
                        android:textColor="@color/standardUiGray"
                        android:layout_below="@+id/weatherStateText"
                        android:textSize="@dimen/TextSize5x"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="@dimen/standardMargin"/>

                    <com.dust.exweather.utils.customviews.CTextView
                        android:id="@+id/weatherTempText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="دما: 40°C"
                        android:textColor="@color/standardUiGray"
                        android:layout_below="@+id/weatherCityNameText"
                        android:textSize="@dimen/TextSize5x"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="@dimen/standardMargin"/>

                    <com.dust.exweather.utils.customviews.CTextView
                        android:id="@+id/lastUpdateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="آپدیت شده در:"
                        android:textColor="@color/black_normal"
                        android:layout_below="@+id/weatherTempText"
                        android:textSize="@dimen/TextSize4x"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="@dimen/standardMargin"/>

                </RelativeLayout>

                <View
                    android:layout_width="180dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/standardMargin1.5x"
                    android:background="@color/standardUiGray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="@dimen/standardMargin1.5x"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="33.33"
                        android:background="@color/light_black"
                        android:orientation="vertical">

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@color/red"
                        android:layout_weight="33.33"
                        android:orientation="vertical">

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="33.33"
                        android:background="@color/blue"
                        android:orientation="vertical">

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/standardMargin1.5x"
                android:layout_marginHorizontal="@dimen/standardMargin2x"
                android:layout_marginVertical="@dimen/standardMargin1.5x"
                app:cardCornerRadius="@dimen/standardMargin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <View
                        android:id="@+id/gradient"
                        android:layout_width="@dimen/standardMargin1.5x"
                        android:layout_height="match_parent"
                        android:background="@drawable/green_to_blue_gradient"
                        android:layout_alignParentStart="true"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/standardMargin"
                        android:layout_toEndOf="@+id/gradient">

                    </FrameLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/standardMargin1.5x"
                android:layout_marginHorizontal="@dimen/standardMargin2x"
                android:layout_marginVertical="@dimen/standardMargin1.5x"
                app:cardCornerRadius="@dimen/standardMargin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <View
                        android:id="@+id/gradient2"
                        android:layout_width="@dimen/standardMargin1.5x"
                        android:layout_height="match_parent"
                        android:background="@drawable/red_to_pink_gradient"
                        android:layout_alignParentStart="true"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/standardMargin"
                        android:layout_toEndOf="@+id/gradient2">

                    </FrameLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/standardMargin1.5x"
                android:layout_marginHorizontal="@dimen/standardMargin2x"
                android:layout_marginVertical="@dimen/standardMargin1.5x"
                app:cardCornerRadius="@dimen/standardMargin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <View
                        android:id="@+id/gradient3"
                        android:layout_width="@dimen/standardMargin1.5x"
                        android:layout_height="match_parent"
                        android:background="@drawable/yellow_to_gray_gradient"
                        android:layout_alignParentStart="true"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/standardMargin"
                        android:layout_toEndOf="@+id/gradient3">

                    </FrameLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>