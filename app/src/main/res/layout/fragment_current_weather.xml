<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/currentFragmentNestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/full_transparent"
            android:descendantFocusability="blocksDescendants"
            android:layoutDirection="ltr"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/full_transparent">

                <ImageView
                    android:id="@+id/weatherStateImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/addLocationImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/standardMargin"
                    android:foreground="?attr/selectableItemBackground"
                    android:src="@drawable/ic_baseline_add_location_alt_24" />

                <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
                    android:id="@+id/detailsViewPagerDotsIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/addLocationImageView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/standardMargin"
                    app:dotsColor="@color/standardUiWhite"
                    app:dotsSize="@dimen/standardMargin0.5x"
                    app:dotsStrokeWidth="1dp" />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/detailsViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:layout_below="@+id/detailsViewPagerDotsIndicator"
                    android:layout_marginTop="@dimen/standardMargin2x"
                    android:clipToPadding="false"
                    android:paddingHorizontal="@dimen/standardMargin"
                    android:paddingBottom="@dimen/standardMargin2x" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detailsViewPager"
                    android:layout_margin="@dimen/standardMargin"
                    android:backgroundTint="?colorSurface"
                    app:cardCornerRadius="@dimen/standardMargin0.5x"
                    app:cardElevation="0dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/mainWeatherRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl"
                        android:overScrollMode="never"
                        android:nestedScrollingEnabled="false"
                        android:padding="@dimen/standardMargin1.5x"
                        tools:itemCount="5"
                        tools:listitem="@layout/item_main_recyclerview" />
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/standardMargin2x"
                android:layout_marginVertical="@dimen/standardMargin1.5x"
                android:backgroundTint="?colorSurface"
                android:layoutDirection="ltr"
                app:cardCornerRadius="@dimen/standardMargin"
                app:cardElevation="0dp">


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/standardMargin2x"
                android:layout_marginVertical="@dimen/standardMargin1.5x"
                android:backgroundTint="?colorSurface"
                app:cardCornerRadius="@dimen/standardMargin"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <View
                        android:id="@+id/gradient2"
                        android:layout_width="@dimen/standardMargin1.5x"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/red_to_pink_gradient" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@+id/gradient2"
                        android:padding="@dimen/standardMargin">

                    </FrameLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/standardMargin2x"
                android:layout_marginVertical="@dimen/standardMargin1.5x"
                android:backgroundTint="?colorSurface"
                app:cardCornerRadius="@dimen/standardMargin"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <View
                        android:id="@+id/gradient3"
                        android:layout_width="@dimen/standardMargin1.5x"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/yellow_to_gray_gradient" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@+id/gradient3"
                        android:padding="@dimen/standardMargin">

                    </FrameLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>