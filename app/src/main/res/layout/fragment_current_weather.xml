<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/swipeRefreshLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:descendantFocusability="blocksDescendants"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/standardUiWhite"
            android:layoutDirection="ltr"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/current_weather_details_background_gradient_day"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/weatherStateImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>

                <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
                    android:id="@+id/detailsViewPagerDotsIndicator"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    app:dotsSize="@dimen/standardMargin0.5x"
                    app:dotsColor="@color/light_black"
                    app:dotsStrokeWidth="1dp"
                    android:layout_marginTop="@dimen/standardMargin"
                    android:layout_height="wrap_content"/>

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/detailsViewPager"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/detailsViewPagerDotsIndicator"
                    android:layout_marginTop="@dimen/standardMargin"
                    android:paddingBottom="@dimen/standardMargin2x"
                    android:layout_height="240dp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mainWeatherRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detailsViewPager"
                    android:layoutDirection="rtl"
                    android:overScrollMode="never"
                    android:padding="@dimen/standardMargin1.5x"
                    tools:itemCount="5"
                    tools:listitem="@layout/item_main_recyclerview" />

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/standardMargin"
                android:layout_marginHorizontal="@dimen/standardMargin2x"
                android:layout_marginVertical="@dimen/standardMargin1.5x"
                app:cardCornerRadius="@dimen/standardMargin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <View
                        android:id="@+id/gradient"
                        android:layout_width="@dimen/standardMargin1.5x"
                        android:layout_height="match_parent"
                        android:background="@drawable/green_to_blue_gradient"
                        android:layout_alignParentStart="true"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@+id/gradient"
                        android:padding="@dimen/standardMargin">

                    </FrameLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/standardMargin"
                android:layout_marginHorizontal="@dimen/standardMargin2x"
                android:layout_marginVertical="@dimen/standardMargin1.5x"
                app:cardCornerRadius="@dimen/standardMargin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <View
                        android:id="@+id/gradient2"
                        android:layout_width="@dimen/standardMargin1.5x"
                        android:layout_height="match_parent"
                        android:background="@drawable/red_to_pink_gradient"
                        android:layout_alignParentStart="true"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@+id/gradient2"
                        android:padding="@dimen/standardMargin">

                    </FrameLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/standardMargin"
                android:layout_marginHorizontal="@dimen/standardMargin2x"
                android:layout_marginVertical="@dimen/standardMargin1.5x"
                app:cardCornerRadius="@dimen/standardMargin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <View
                        android:id="@+id/gradient3"
                        android:layout_width="@dimen/standardMargin1.5x"
                        android:layout_height="match_parent"
                        android:background="@drawable/yellow_to_gray_gradient"
                        android:layout_alignParentStart="true"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/standardMargin"
                        android:layout_toEndOf="@+id/gradient3">

                    </FrameLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>