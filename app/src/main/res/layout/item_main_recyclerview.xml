<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/full_transparent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:layout_height="50dp">

    <ProgressBar
        android:id="@+id/item_progressBar_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_marginHorizontal="@dimen/standardMargin3x"
        android:max="100"
        android:progressTint="@color/light_black"
        android:indeterminateTint="@color/black"
        android:indeterminate="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/itemStateImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="@dimen/standardMargin"
        tools:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.dust.exweather.utils.customviews.CTextView
        android:id="@+id/item_dayOfWeekText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="دوشنبه"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/standardMargin0.5x"
        android:textSize="@dimen/mainRecyclerViewItemMainTextSize"
        android:textColor="@color/standardUiWhite"
        app:layout_constraintStart_toEndOf="@+id/itemStateImage"
        app:layout_constraintBottom_toTopOf="@+id/item_date"
        android:layout_marginHorizontal="@dimen/standardMargin0.5x"/>

    <TextView
        android:id="@+id/item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/item_dayOfWeekText"
        android:textSize="@dimen/TextSize2x"
        android:layout_marginBottom="@dimen/standardMargin0.5x"
        app:layout_constraintTop_toBottomOf="@+id/item_dayOfWeekText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/standardUiWhite"
        tools:text="2022-01-04"/>

    <TextView
        android:id="@+id/item_TempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="20°C"
        android:layout_marginHorizontal="@dimen/standardMargin2x"
        android:textSize="@dimen/mainRecyclerViewItemMinMaxTempTextSize"
        app:layout_constraintTop_toBottomOf="@+id/item_maxTempImage"
        app:layout_constraintEnd_toEndOf="@+id/item_minTempImage"
        app:layout_constraintStart_toStartOf="@+id/item_minTempImage"
        app:layout_constraintBottom_toTopOf="@+id/item_minTempImage"
        android:textColor="@color/standardUiWhite"
        />

    <TextView
        android:id="@+id/item_minTempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="20°C"
        android:layout_marginHorizontal="@dimen/standardMargin2x"
        android:textSize="@dimen/mainRecyclerViewItemMinMaxTempTextSize"
        android:textColor="@color/standardUiWhite"
        app:layout_constraintBottom_toTopOf="@+id/item_minTempImage"
        app:layout_constraintStart_toStartOf="@+id/item_minTempImage"
        app:layout_constraintEnd_toEndOf="@+id/item_minTempImage"/>

    <ImageView
        android:id="@+id/item_maxTempImage"
        android:layout_width="45dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_max_temp"
        app:layout_constraintEnd_toEndOf="@+id/item_minTempImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_minTempImage"/>

    <TextView
        android:id="@+id/item_maxTempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="20°C"
        android:layout_marginHorizontal="@dimen/standardMargin2x"
        android:textSize="@dimen/mainRecyclerViewItemMinMaxTempTextSize"
        android:textColor="@color/standardUiWhite"
        app:layout_constraintTop_toBottomOf="@+id/item_maxTempImage"
        app:layout_constraintStart_toStartOf="@+id/item_minTempImage"
        app:layout_constraintEnd_toEndOf="@+id/item_minTempImage"/>

    <ImageView
        android:id="@+id/item_minTempImage"
        android:layout_width="45dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_min_temp"
        android:layout_marginEnd="@dimen/standardMargin1.5x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.dust.exweather.utils.customviews.CTextView
        android:id="@+id/item_weatherStateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="بارانی"
        android:textSize="@dimen/mainRecyclerViewItemMainTextSize"
        android:textColor="@color/standardUiWhite"
        app:layout_constraintStart_toEndOf="@+id/item_dayOfWeekText"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="@dimen/standardMargin"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>