<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExWeather" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/whiteBackground</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorAccent">@color/standardUiBlue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="drawerArrowStyle">@style/NavigationViewToggleStyle</item>
        <item name="colorOnSurface">@color/standardUiWhite</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorOnBackground">@color/lightNavigationViewBackgroundColor</item>
        <item name="ThemeSwitcherBackgroundColor">@color/mainTextColor</item>
        <item name="ThemeSwitcherSelectedItemBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/standardUiDark</item>
        <item name="colorSurface">@color/mainContainerWhiteTransparentBackground</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DarkExWeather" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkModePrimary</item>
        <item name="colorPrimaryVariant">@color/black_normal</item>
        <item name="colorOnPrimary">@color/light_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorAccent">@color/standardUiBlue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColor">@color/standardUiWhite</item>
        <item name="colorSurface">@color/mainContainerBlackTransparentBackground</item>
        <item name="drawerArrowStyle">@style/NavigationViewToggleStyle</item>
        <item name="colorOnSurface">@color/light_black3</item>
        <item name="colorButtonNormal">@color/spinnerNight</item>
        <item name="colorOnBackground">@color/darkNavigationViewBackgroundColor</item>
        <item name="ThemeSwitcherBackgroundColor">@color/mainContainerBlackTransparentBackground</item>
        <item name="ThemeSwitcherSelectedItemBackgroundColor">@color/gray2</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NavigationViewToggleStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">?android:textColor</item>
    </style>

    <style name="CalendarView.DayColor" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/standardUiWhite</item>
        <item name="android:weekNumberColor">@color/standardUiWhite</item>
        <item name="colorAccent">@color/standardUiBlue</item>
        <item name="colorPrimary">@color/standardUiWhite</item>
    </style>

    <style name="CalendarView.MainTheme" parent="Theme.AppCompat">
        <item name="colorAccent">@color/standardUiBlue</item>
        <item name="colorPrimary">@color/standardUiWhite</item>
    </style>

    <style name="BottomSheetDialogRounded" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetRound</item>
    </style>

    <style name="BottomSheetRound" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceBottomSheet</item>
    </style>

    <style name="ShapeAppearanceBottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeBottomLeft">15dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
    </style>

</resources>