<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/standardMargin0.5x" />
            <solid android:color="@color/white_bottom_navigation" />
            <stroke android:width="1dp" android:color="@color/light_black" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/standardMargin0.5x" />
            <solid android:color="@color/light_black" />
            <stroke android:width="1dp" android:color="@color/standardUiBlue" android:dashWidth="@dimen/standardMargin" android:dashGap="2dp" />
        </shape>
    </item>
</selector>

